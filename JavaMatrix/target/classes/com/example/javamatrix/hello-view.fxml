            <left>
                <BorderPane>
                    <top>
                        <TextField fx:id="t111" text="111" maxWidth="50" />
                    </top>
                    <center>
                        <TextField fx:id="t121" text="121" maxWidth="50" />
                    </center>
                    <bottom>
                        <TextField fx:id="t131" text="131" maxWidth="50" />
                    </bottom>
                </BorderPane>
            </left>
            <center>
                <BorderPane>
                    <top>
                        <TextField fx:id="t112" text="112" maxWidth="50" />
                    </top>
                    <center>
                        <TextField fx:id="t122" text="122" maxWidth="50" />
                    </center>
                    <bottom>
                        <TextField fx:id="t132" text="132" maxWidth="50" />
                    </bottom>
                </BorderPane>
            </center>
            <right>
                <BorderPane>
                    <top>
                        <TextField fx:id="t113" text="113" maxWidth="50" />
                    </top>
                    <center>
                        <TextField fx:id="t123" text="123" maxWidth="50" />
                    </center>
                    <bottom>
                        <TextField fx:id="t133" text="133" maxWidth="50" />
                    </bottom>
                </BorderPane>
            </right>
        </BorderPane>
    </left>
    <center>
        <BorderPane>
            <center>
                <Label fx:id="centerLabel" text="X"/>
            </center>
        </BorderPane>
    </center>
    <right>
        <BorderPane>
            <padding>
                <Insets bottom="80.0" left="40.0" right="80.0" top="60.0"/>
            </padding>
            <left>
                <BorderPane>
                    <top>
                        <TextField fx:id="t211" text="0" maxWidth="50" />
                    </top>
                    <center>
                        <TextField fx:id="t221" text="1" maxWidth="50" />
                    </center>
                    <bottom>
                        <TextField fx:id="t231" text="2" maxWidth="50" />
                    </bottom>
                </BorderPane>
            </left>
            <center>
                <BorderPane>
                    <top>
                        <TextField fx:id="t212" text="3" maxWidth="50" />
                    </top>
                    <center>
                        <TextField fx:id="t222" text="4" maxWidth="50" />
                    </center>
                    <bottom>
                        <TextField fx:id="t232" text="5" maxWidth="50" />
                    </bottom>
                </BorderPane>
            </center>
            <right>
                <BorderPane>
                    <top>
                        <TextField fx:id="t213" text="6" maxWidth="50" />
                    </top>
                    <center>
                        <TextField fx:id="t223" text="7" maxWidth="50" />
                    </center>
                    <bottom>
                        <TextField fx:id="t233" text="8" maxWidth="50" />
                    </bottom>
                </BorderPane>
            </right>
        </BorderPane>
    </right>
    <bottom>
        <BorderPane>
            <padding>
                <Insets bottom="40.0" left="80.0" right="80.0" top="0.0"/>
            </padding>
            <top>
                <BorderPane>
                    <left>
                    <Button text="Найти определитель" onAction="#calculate"/>
                    </left>
                    <center>
                        <Button text="Умножить матрицы" onAction="#multiplyMatrixes"/>
                    </center>
                    <right>
                        <Button text="Найти обратную матрицу" onAction="#reversedMatrix"/>
                    </right>
                </BorderPane>
            </top>
            <bottom>
                <Label fx:id="answer" text="">
                <Cell>
                    <properties property="answer"/>
                </Cell>
                </Label>
            </bottom>
        </BorderPane>
    </bottom>
    <padding>
        <Insets bottom="0.0" left="0.0" right="0.0" top="0.0"/>
    </padding>
</BorderPane>

